---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>
  <body>
    <header>
      <nav>
        <a href={`${import.meta.env.BASE_URL}`}>Inicio</a> |
        <a href={`${import.meta.env.BASE_URL}about/`}>Sobre mí</a> |
        <a href={`${import.meta.env.BASE_URL}experience/`}>Experiencia</a> |
        <a href={`${import.meta.env.BASE_URL}education/`}>Educación</a> |
        <a href={`${import.meta.env.BASE_URL}certifications/`}>Certificaciones</a> |
        <a href={`${import.meta.env.BASE_URL}contact/`}>Contacto</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>© {new Date().getFullYear()} Nixon Betancour</p>
    </footer>
  </body>
</html>
